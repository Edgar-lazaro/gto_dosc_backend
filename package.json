{
  "name": "gto_docs_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "prisma:generate": "prisma generate",
    "start:dev": "(lsof -tiTCP:3000 -sTCP:LISTEN | xargs -r kill -9) || true; nest start --watch",
    "start": "node dist/main.js",
    "start:prod": "npm run build && node dist/main.js",
    "seed:dummy": "ts-node scripts/seed-dummy.ts",
    "seed:auxiliar": "ts-node scripts/seed-auxiliar.ts",
    "set-password": "ts-node scripts/set-user-password.ts",
    "clean:dummy": "ts-node scripts/cleanup-dummy.ts",
    "smoke:api": "ts-node scripts/smoke-test-api.ts",
    "smoke:api:with-server": "(lsof -tiTCP:3000 -sTCP:LISTEN | xargs -r kill -9) || true; npm run start:dev > /tmp/gto_docs_backend_devserver.log 2>&1 & SERVER_PID=$!; i=1; while [ $i -le 30 ]; do curl -fsS http://localhost:3000/api/health >/dev/null 2>&1 && break; sleep 1; i=$((i+1)); done; npm run smoke:api; STATUS=$?; kill $SERVER_PID >/dev/null 2>&1 || true; wait $SERVER_PID >/dev/null 2>&1 || true; (lsof -tiTCP:3000 -sTCP:LISTEN | xargs -r kill -9) || true; exit $STATUS",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.19.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "ldapjs": "^3.0.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.19.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
